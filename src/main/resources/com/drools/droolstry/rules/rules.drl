            Letter (letter == "THANKS" || letter == "MULȚUMESC" || letter == "MERSI")
            then
            resultForBot.setValue("Cu plăcere!");
            end

      rule "how are you"
                  when
                  Letter (letter == "CUM STAI?" || letter == "CE FACI?" || letter == "CUM STAI" || letter == "CE FACI" || letter == "CF")
                  then
