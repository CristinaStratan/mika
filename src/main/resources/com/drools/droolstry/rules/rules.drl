      rule "hello"
            when
            Letter (letter == "HI" || letter == "HELLO" || letter == "SALUT" ||letter == "BUNA" || letter == "BUNĂ" )
            then
            resultForBot.setValue("Salut! Eu sunt, asistentul tău virtual, Mika. Te voi ajuta să înveți limbajul semnelor. Hai să începem! ");
            end

      rule "purpose"
            when
            Letter (letter == "CARE ESTE SCOPUL TĂU" || letter == "CARE ESTE SCOPUL TĂU?" || letter == "CU CE MĂ POȚI AJUTA" || letter == "CE POȚI TU FACE" || letter == "CARE ESTE SCOPUL TAU?" || letter == "CU CE MA POTI AJUTA" || letter == "CE POTI TU FACE")
            then
            resultForBot.setValue("Eu sunt prietenul și asistentul tău. Eu pot să îți arăt gesturile limbajului mimico gestual. ");
            end

      rule "farewell"
            when
            Letter (letter == "BYE" || letter == "END" || letter == "LA REVEDERE" || letter == "PA")
            then
//             resultForBot.setValue("Goodbye, it was nice to have you!");
             resultForBot.setValue("La revedere, a fost o placere să discut cu tine.");
             end

      rule "thanks"
